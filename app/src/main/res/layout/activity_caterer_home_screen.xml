<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/logout_idddd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/colorActivatedHighlight"
            android:text="Logout" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:scaleX=".6"
            android:scaleY=".6"
            app:srcCompat="@drawable/uta1" />

        <Button
            android:id="@+id/caterer_view_pending_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:layout_weight="5"
            android:background="#3a7ce8"
            android:text="View Pending Requests" />

        <Button
            android:id="@+id/caterer_view_approved_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:layout_weight="5"
            android:background="#3a7ce8"
            android:text="View Approved Requests" />

        <Button
            android:id="@+id/caterer_view_calendarsss_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:layout_weight="5"
            android:background="#3a7ce8"
            android:text="View Calendar" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>