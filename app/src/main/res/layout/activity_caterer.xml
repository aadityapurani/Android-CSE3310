<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="395dp"
        android:layout_height="643dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="fitCenter"
                android:scaleX=".5"
                android:scaleY=".5"
                app:srcCompat="@drawable/uta1" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteY="100dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button26"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:layout_weight="100"
                        android:background="#3a7ce8"
                        android:padding="20dp"
                        android:paddingBottom="50dp"
                        android:text="Create Event Plan" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button30"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:background="#3a7ce8"
                        android:text="Add Resources" />

                    <Button
                        android:id="@+id/button27"
                        android:layout_width="170dp"
                        android:layout_height="130dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:background="#3a7ce8"
                        android:text="Schedule Location" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button31"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:background="#3a7ce8"
                        android:text="Assign Staff" />

                    <Button
                        android:id="@+id/button28"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:background="#3a7ce8"
                        android:text="View Calendar" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button32"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:background="#3a7ce8"
                        android:text="View Event" />

                    <Button
                        android:id="@+id/button29"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:background="#3a7ce8"
                        android:padding="10dp"
                        android:text="Delete Event" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>