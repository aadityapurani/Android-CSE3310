<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="?android:attr/colorActivatedHighlight"
                android:text="Logout" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="fitCenter"
                android:scaleX=".6"
                android:scaleY=".6"
                app:srcCompat="@drawable/uta1" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteY="100dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button26"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:layout_weight="100"
                        android:background="#3a7ce8"
                        android:padding="20dp"
                        android:paddingBottom="50dp"
                        android:text="Create Event Plan" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/caterer_add_resources_id"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:background="#3a7ce8"
                        android:text="Add Resources" />

                    <Button
                        android:id="@+id/schedule_venue_id"
                        android:layout_width="170dp"
                        android:layout_height="130dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:background="#3a7ce8"
                        android:text="Schedule Location" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/assign_staff_id"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:background="#3a7ce8"
                        android:text="Assign Staff" />

                    <Button
                        android:id="@+id/button28"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:background="#3a7ce8"
                        android:text="View Calendar" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/view_event_details_id"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:background="#3a7ce8"
                        android:text="View Event" />

                    <Button
                        android:id="@+id/delete_event_id"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:background="#3a7ce8"
                        android:padding="10dp"
                        android:text="Delete Event" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>