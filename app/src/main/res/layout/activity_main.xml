<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.team7.cse.mavevent.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        app:srcCompat="@drawable/uta1" />

    <EditText
        android:id="@+id/login_username_id"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/login_password_id"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/login_username_id"
        android:layout_alignLeft="@+id/login_username_id"
        android:layout_alignRight="@+id/login_username_id"
        android:layout_alignStart="@+id/login_username_id"
        android:layout_below="@+id/login_username_id"
        android:layout_marginTop="23dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/login_login_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/login_password_id"
        android:layout_alignLeft="@+id/login_password_id"
        android:layout_alignRight="@+id/login_password_id"
        android:layout_alignStart="@+id/login_password_id"
        android:layout_below="@+id/login_password_id"
        android:layout_marginTop="50dp"
        android:background="#3a7ce8"
        android:text="Login" />

    <TextView
        android:id="@+id/login_register_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp"
        android:text="Register"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

</RelativeLayout>
